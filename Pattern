n=int(input())
for i in range(1,n+1):
    for j in range(1,i+1):
        print(j,end=" ")
    for spaces in range(2*(n-i)):
        print(" ",end=" ")
    for k in range(i,0,-1):
        print(k,end=" ")
    print()
for i in range(n-1,0,-1):
    for j in range(1,i+1):
        print(j,end=" ")
    for spaces in range(2*(n-i)):
        print(" ",end=" ")
    for k in range(i,0,-1):
        print(k,end=" ")
    print()
